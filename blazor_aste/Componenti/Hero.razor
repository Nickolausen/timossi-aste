<div class="position-relative d-flex flex-column justify-content-center">
    <div class="position-absolute text-white text-center align-self-center">
        <h1 class="fw-bolder">Timossi Casa d'Aste</h1>
        <span class="fs-4">Un progetto Blazor di 5F</span>
    </div>
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Immagini/img1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/Immagini/img2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/Immagini/img3.jpg" class="d-block w-100" alt="...">
            </div>
